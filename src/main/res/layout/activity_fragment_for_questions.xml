<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentForQuestions">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/sportQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#DFB2E6"
            android:onClick="toSportQuestions"
            android:text="Sport Questions"
            android:textColor="#000000"
            android:textStyle="bold"
            tools:text="Sport Questions" />

        <Button
            android:id="@+id/nutritionQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="#DFB2E6"
            android:onClick="toNutritionQuestions"
            android:text="Nutrition Questions"
            android:textColor="#000000"
            android:textStyle="bold"
            tools:text="Nutrition Questions" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="604dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="4dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#000000"
            app:srcCompat="@drawable/fitnes" />

    </FrameLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#DFB2E6"
        android:onClick="toLogin"
        android:shadowColor="#D83636"
        android:text="Login to Your Account"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>